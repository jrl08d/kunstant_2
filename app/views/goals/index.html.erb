<h1>Tasks & Goals</h1>
<%= link_to 'Add goal', new_goal_path %>

<div id="goals">
<h2 id="week">
  <%= link_to "<", date: @date.prev_week %>
  <%= @date.strftime("%B")%>
  <%= @date.beginning_of_week(:sunday).strftime("%d") %> - <%= @date.end_of_week(:sunday).strftime("%d") %>
  <%= @date.strftime("%Y") %>
  <%= link_to ">", date: @date.next_week %>
</h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @goals_by_date[date] %>
    <ul>
      <% @goals_by_date[date].each do |goal| %>
        <%= content_tag :div, class: "content" do-%>
          <li>
            <%= check_box_tag :done %>
            <%= goal.description %>
            <%= link_to '(x)', goal_path(goal.id), method: :delete, data: { confirm: 'Are you sure?' } %>
          </li>
        <% end %>
      <% end %>
    </ul>
    <% end %>
  <% end %>
</div>
