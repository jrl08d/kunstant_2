<h1>Goal Calendar</h1>


<div id="goals">
<h2 id="month">
  <%= link_to "<", date: @date.prev_month %>
  <%= @date.strftime("%B %Y") %>   
  <%= link_to ">", date: @date.next_month %>
</h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @goals_by_date[date] %>
    <ul>
      <% @goals_by_date[date].each do |goal| %>
        <li><%= link_to goal.description, goal %></li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
</div>
