<%= simple_form_for(@project, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :default %>
  </div>

  <div>
    <%= f.file_field :avatar %>
  </div>

  <br>

  <div class="form-actions">
    <%= f.submit @project.new_record? ? "Create a Project" : "Edit my Project" %>
  </div>
  
<% end %>
<br>
