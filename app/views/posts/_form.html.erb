<%= simple_form_for @post, :url => posts_path, :html => { :multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
<!--     <%= f.association :project %> -->
<!--     <%= f.input :post_text %> -->
    <%= f.label 'Post Goes Here' %><br>
    <%= f.text_area :post_text %>
  </div>

  <div><%= f.hidden_field :project_id, value: @project.id %></div>

  <div class="form actions">
  <%= f.file_field :post_img %></div>

  <div class="form-actions">
    <%= f.submit @post.new_record? ? "Post" : "Change Post" %>
  </div>



<% end %>

