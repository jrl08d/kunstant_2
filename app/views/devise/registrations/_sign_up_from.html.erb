<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper_mappings: {
    check_boxes: :vertical_radio_and_checkboxes,
    radio_buttons: :vertical_radio_and_checkboxes,
    file: :vertical_file_input,
    boolean: :vertical_boolean
  }) do |f| %>
  <%= f.error_notification %>


    <%= f.input :email, required: true, placeholder: 'Enter email' %>
    <%= f.input :password, required: true, placeholder: 'Password' %>
    <%= f.input :password_confirmation, required: true, placeholder: 'Retype Password' %>



    <%= f.button :submit %>

<% end %>